[
{{- $pages := where .Site.RegularPages "Params.type" "post" -}}
{{- range $i, $p := $pages -}}
  {{- if $i }},{{ end }}
  {
    "title": {{ $p.Title | jsonify }},
    "permalink": {{ $p.Permalink | jsonify }},
    "summary": {{ ($p.Summary | plainify) | jsonify }},
    "content": {{ $p.Plain | jsonify }},
    "tags": {{ (cond (isset $p.Params "tags") $p.Params.tags (slice)) | jsonify }}
  }
{{- end }}
]

